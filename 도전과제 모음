도전과제 2-1
package demo;

import java.util.Scanner;
public class demo1 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		double w, h, area;
		System.out.print("직사각형의 가로의 길이를 입력하세요 : ");
		w = sc.nextDouble();
		System.out.print("직사각형의 세로의 길이를 입력하세요 : ");
		h = sc.nextDouble();
		area = w*h;
		System.out.print("직사각형의 넓이는 : " + area + "입니다.");
	}

}
