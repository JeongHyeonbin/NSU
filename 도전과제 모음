도전과제 2-2
package demo;
import java.util.Scanner;
public class demo2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String y;
		System.out.println("정수를 입력하세요 : ");
		int a = sc.nextInt();
		y = (a%2 == 0) ? "짝수" : "홀수";
		System.out.println(y);
		sc.close();  // 이걸 안쓰면 왜안되는지...공부해야겠습니다..한참을 찾아봤네요//
	}

}
